# Supabase Configuration (for real mode)
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Mock Data Configuration
# Set to 'true' to use mock data instead of real Supabase
VITE_USE_MOCK_DATA=true

# Mock API delay range in milliseconds (simulates network latency)
VITE_MOCK_API_DELAY_MIN=300
VITE_MOCK_API_DELAY_MAX=800

# Mock error rate (0.0 to 1.0) - set to 0 to disable error simulation
VITE_MOCK_ERROR_RATE=0

